<div class="form"> 	
	<h2 style="color: #624b4b">Login Admin</h2><hr>
		<% flash.each do |type, message| %> <!-- memanggil notifikasi jika gagal login-->
	  		<p class="alert alert-danger alert-dismissable fade show"><button type="button" class="close" data-dismiss="alert">&times;</button>
	  		<strong>Error!</strong><%=message%></p>
		<%end%>
	<%= form_tag do %>	      
		<div class="form-group">
			<label>username</label>
			<%= text_field_tag(:username, '', {class:'form-control'})%>
		</div>

		<div class="form-group">
			<label>Password</label>	
			<%= password_field_tag(:password, '', {class:'form-control'})%>
		</div>          

			<%= submit_tag "Masuk", class:'btn btn-block btn-secondary' %>
	<% end %>          	

	<div class="text-center">
		<a href="#">Lupa Password</a> or
		<a href="daftar">Sign up</a>
	</div>
</div>